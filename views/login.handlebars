<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {{> layouts/main title="Betcha - Login"}}
    {{> layouts/main cssPath="../css/login.css"}}

    <!-- GOOGLE FONTS -->
    {{> partials/font}}
</head>

<body>
    <!-- HEADER -->
    {{> partials/header}}
    <!-- INPUT FIELDS -->
    <form action="/api/users/signup" method="POST">
        <label for="input"></label>
        <br>
        <input id="email-input" type="text" placeholder="email">
        <br>
        <input id="pass-input" type="password" placeholder="password" name="password">
        <br>
        <button type="submit" id="login-btn">Login</button>
        <button type="submit" id="sign-up-btn">Sign Up</button>
    </form>

    <!-- Display error message -->
    {{#if errorMessage}}
    <p class="error-message">{{errorMessage}}</p>
    {{/if}}

    <script src="../js/script.js"></script>
</body>